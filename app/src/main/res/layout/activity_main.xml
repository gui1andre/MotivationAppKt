<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:background="@color/purple"
        android:id="@+id/linear_menu"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/image_all"
            android:layout_weight="1"
            android:src="@drawable/baseline_all_inclusive_24"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/image_happy"
            android:layout_weight="1"
            android:src="@drawable/baseline_emoji_emotions_24"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/image_sunny"
            android:layout_weight="1"
            android:src="@drawable/baseline_wb_sunny_24"
            android:layout_width="0dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_user_name"
        android:fontFamily="@font/cabin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OlÃ¡, Kotlin!"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear_menu"/>

    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/cabin"
        android:padding="16dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <View
        android:layout_below="@id/text_phrase"
        android:elevation="5dp"
        android:layout_width="128dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:background="@color/dark_purple"/>

    <Button
        android:id="@+id/button_new_pharese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/dark_purple"
        android:fontFamily="@font/cabin"
        android:text="@string/new_phrase" />
</RelativeLayout>